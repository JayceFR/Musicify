<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:itemBackground">#5827B3</item>
        <item name="android:theme">@style/Theme.Material3.Dark</item>
    </style>
    
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>